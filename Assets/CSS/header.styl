header
	width 100%
	height 50px
	box-shadow 0 0 5px 0 black
	display flex

header .title
	margin-left 15px
	display flex
	align-items center
	justify-content space-around
	height 50px

header .title img 
	width 40px
	height 40px
	margin-right 15px
	
header .title h1 
	font-size 25px
	
header ul
	margin 0
	margin-left 100px
	margin-right 100px
	display flex
	list-style none
	width 100%
	justify-content space-around
	padding 0

header ul a
	width 100%
	text-align center
	height 100%
	position relative

header ul a:hover
	background rgba(0,0,0,0.1)
	border-bottom solid 2px black
	
header ul li
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

header a 
	color inherit
	text-decoration none
	
header .user
	width 200px
	flex-shrink 0
	border-left solid 2px black
	display flex
	align-items center
	
header .user img 
	width 40px
	margin-left 10px
	margin-right 10px
	height 40px
	border-radius 50%
	
header .user h2 
	font-size 20px